}
<link rel="stylesheet" href="~/css/CryptoPagesStyle.css" />

<div class="text-center">
    <h1 class="display-3">@ViewData["Title"]</h1>
</div>
<br />

<form method="post" enctype="multipart/form-data">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="form-group text-center">
        <label class="col-form-label-lg">Text na zašifrování: </label>
        <input asp-for="@Model.cryptoContent.DecryptedText" class="form-control-lg" id="inputTB"/>
        <br />
        <label class="col-form-label-lg">Klíč: </label>
        <input asp-for="@Model.cryptoContent.Key" id="keyTB" class="form-control-lg" value=@Model.cryptoContent.Key />
    </div>

    <div class="text-center">
        <button class="btn btn-dark" id="submitBTN" type="submit">
            Zašifrovat
        </button>
    </div>

    <div class="text-center">
        <label class="col-form-label-lg">Zašifrovaný text: </label>
        <br />
        <span asp-validation-for="cryptoContent.Key" class="text-danger"></span>
        <label class="col-form-label-lg resultLB">@Model.cryptoContent.EncryptedText</label>
    </div>
</form>